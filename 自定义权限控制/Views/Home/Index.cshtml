@{
    var access_token = ViewBag.token;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Index</title>
    <script src="~/scripts/bootstrap.js"></script>
    <link href="~/scripts/bootstrap.css" rel="stylesheet" />
    <script src="~/scripts/jquery-1.8.2.min.js"></script>
    <script src="~/scripts/vue.js"></script>
    <script src="~/scripts/vue-router.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row" style="height:20px"></div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
              <form>
                  <div class="col-lg-6">
                      <div class="input-group">
                          <input type="text" class="form-control">
                          <div class="input-group-btn">
                              <button type="submit" class="btn btn-default" tabindex="-1">
                                  搜索
                              </button>
                              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" tabindex="-1">
                                  <span class="caret"></span>
                                  <span class="sr-only">切换下拉菜单</span>
                              </button>
                              <ul class="dropdown-menu pull-right">
                                  <li><a href="#">功能</a></li>
                                  <li><a href="#">另一个功能</a></li>
                                  <li><a href="#">其他</a></li>
                                  <li class="divider"></li>
                                  <li><a href="#">分离的链接</a></li>
                              </ul>
                          </div><!-- /btn-group -->
                      </div><!-- /input-group -->
                  </div><!-- /.col-lg-6 -->
              </form>

            </div><!-- /.row -->
            <div class="col-md-3"></div>
        </div>
    </div>
    <div class="row" style="height:30px"> </div>
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-default" style="margin-top:20px;">
                <div class="panel-heading">
                    <h3 class="panel-title">列表面板</h3>
                </div>
                <div class="panel-body">
                    @for (int i = 0; i < 20; i++)
                    {
                        <ul>
                            <li><a class="btn btn-default">新闻话题</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="panel panel-default" style="margin-top:20px;">
                <div class="panel-heading">
                    <h3 class="panel-title">主题面板</h3>
                </div>
                <div class="panel-body">
                    @for (int i = 0; i < 20; i++)
                    {
                        <ul>
                            <li><a class="btn btn-default">新闻话题</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-default" style="margin-top:20px;">
                <div class="panel-heading">
                    <h3 class="panel-title">推介面板</h3>
                </div>
                <div class="panel-body">
                    @for (int i = 0; i < 20; i++)
                    {
                        <ul>
                            <li><a class="btn btn-default">新闻话题</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>